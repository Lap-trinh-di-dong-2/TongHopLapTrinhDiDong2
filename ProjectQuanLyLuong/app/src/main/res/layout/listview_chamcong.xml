<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dp"
    >


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:orientation="vertical">
    <ImageView
        android:id="@+id/imgHinh"
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:src="@drawable/nam" />
        <TextView
            android:id="@+id/tvMaNhanVien"
            style="@style/textview4"
            android:layout_gravity="center"
            android:text="NV01" />
    </LinearLayout>

    <LinearLayout
        style="@style/linerlayoutveti"
        android:layout_marginLeft="20sp"
        android:layout_weight="1">
        <LinearLayout
            style="@style/linerlayout">
            <TextView
               style="@style/textview2"
                android:text="@string/ten"/>
        <TextView
            android:id="@+id/tvTenNhanVien"
            style="@style/textview2"
            android:text="Trần Bình An" />
        </LinearLayout>
        <LinearLayout
           style="@style/linerlayout">
            <TextView
                style="@style/textview2"
                android:text="@string/thang"/>
        <TextView
            android:id="@+id/tvNgayChamCong"
            style="@style/textview2"
            android:text="20/07/2020" />
        </LinearLayout>

        <LinearLayout style="@style/linerlayout">

            <TextView
                style="@style/textview2"
                android:text="@string/songaycong" />

            <TextView
                android:id="@+id/tvSoNgayCong"
                style="@style/textview2"
                android:text="26" />
        </LinearLayout>
    </LinearLayout>
        <ImageView
            android:id="@+id/imgXoa"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:layout_marginRight="20sp"
            android:layout_gravity="center"
            android:src="@drawable/xoa" />
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">


    <ImageView
        style="@style/img"
        android:id="@+id/imgHinh"
        android:src="@drawable/phong2"
        android:layout_gravity="center"
        android:layout_marginRight="10sp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">
        <LinearLayout
            style="@style/linerlayout">
            <TextView
                style="@style/textview4"
                android:text="@string/ma"></TextView>
            <TextView
                android:id="@+id/tvMaPhong"
                style="@style/textview4"
                android:text="NS01"/>
        </LinearLayout>
        <LinearLayout
            style="@style/linerlayout">
            <TextView
                style="@style/textview4"
                android:text="@string/ten"></TextView>
            <TextView
                style="@style/textview4"
                android:id="@+id/tvTenPhong"
                android:textSize="20sp"
                android:text="Nhân Sự"/>
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:layout_width="40sp"
        android:layout_height="40sp"
        android:id="@+id/imgXoa"
        android:layout_marginRight="20sp"
        android:layout_gravity="center"
        android:src="@drawable/xoa"/>
</LinearLayout>
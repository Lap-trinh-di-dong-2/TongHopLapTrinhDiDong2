<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
   >
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_height="wrap_content">
    <ImageView
        android:layout_width="100sp"
        android:layout_height="80sp"
        android:id="@+id/imgHinh"
        android:src="@drawable/nam"/>
    <TextView
        android:id="@+id/tvMaNV"
        style="@style/textview1"
        android:textColor="#F8F5F5"
        android:layout_gravity="center"
        android:text="NV01" />
    </LinearLayout>
    <LinearLayout
        style="@style/linerlayoutveti"
        android:layout_weight="1">
        <LinearLayout
           style="@style/linerlayout">
            <TextView
                style="@style/textview2"
                android:text="@string/ten"/>
        <TextView
            android:id="@+id/tvTenNV"
            style="@style/textview2"

            android:text="Trần Bình An" />
        </LinearLayout>
        <LinearLayout
           style="@style/linerlayout">
            <TextView
               style="@style/textview2"

                android:text="@string/gioitinh"/>
            <TextView
                style="@style/textview2"
                android:text="Nam"

                android:id="@+id/tvGioiTinh"/>
        </LinearLayout>
        <LinearLayout
            style="@style/linerlayout">
            <TextView
               style="@style/textview2"

                android:text="@string/ngaysinh"/>
        <TextView
            android:id="@+id/tvNgaySinh"
            style="@style/textview2"

            android:text="20/02/1997" />
        </LinearLayout>
        <LinearLayout
           style="@style/linerlayout">
            <TextView
                style="@style/textview2"
                android:text="@string/phongban"/>
        <TextView
            android:id="@+id/tvMaPB"
            style="@style/textview2"
            android:text="Nhân Sự" />
        </LinearLayout>
        <LinearLayout
            style="@style/linerlayout">
            <TextView
                style="@style/textview2"

                android:text="@string/hesoluong"/>
        <TextView
            android:id="@+id/tvLuong"
            style="@style/textview2"

            android:text="250000" />
        </LinearLayout>
        <LinearLayout
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnChamCong"
                android:text="@string/chamcong"
                android:background="@drawable/custom_button2"
                android:padding="10dp"
                android:textSize="12dp"
                android:textColor="#FFFFFF"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnTamUng"
                android:layout_marginLeft="10dp"
                android:text="@string/tamung"
                android:background="@drawable/custom_button2"
                android:padding="10dp"
                android:textSize="12dp"
                android:textColor="#FFFFFF"
                />
        </LinearLayout>

    </LinearLayout>
    <ImageView
        android:layout_width="40sp"
        android:layout_height="40sp"
        android:id="@+id/imgXoa"
        android:layout_gravity="center"
        android:src="@drawable/xoa"/>
</LinearLayout>
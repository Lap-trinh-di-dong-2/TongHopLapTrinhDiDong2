<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".GiaoDien.ChamCong.ThemChamCong">

    <TextView
        style="@style/tieude"
        android:text="@string/chamcong" />

    <LinearLayout style="@style/linerlayout">

        <TextView
            style="@style/textview1"
            android:text="@string/manhanvien" />

        <TextView
            android:id="@+id/tvMaNhanVien"
            style="@style/textview3"
            android:inputType="text" />
    </LinearLayout>

    <LinearLayout style="@style/linerlayout">

        <TextView
            style="@style/textview1"
            android:text="@string/tennhanvien" />

        <TextView
            android:id="@+id/tvTenNhanVien"
            style="@style/textview3"
            android:inputType="textPersonName" />
    </LinearLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/txtILNgayChamCong"
        app:boxStrokeColor="#29DD0A"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txtNgayChamCong"
            style="@style/edittext"
            android:inputType="date"
            android:hint="Thời gian chấm"
            />

    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/txtILSoNgayCong"
        app:boxStrokeColor="#29DD0A"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txtSoNgayCong"
            style="@style/edittext"
            android:inputType="numberSigned"
            android:hint="@string/songaycong"
            />

    </com.google.android.material.textfield.TextInputLayout>


    <TextView
        style="@style/tieude"
        android:text="@string/chucnang" />

    <LinearLayout style="@style/linerlayout3">

        <Button
            android:id="@+id/btnLuuChamCong"
            style="@style/button"
            android:layout_marginLeft="50sp"
            android:text="@string/luuchamcong"
            android:background="@drawable/custom_button3"/>

        <Button
            android:id="@+id/btnThoat"
            style="@style/button"
            android:layout_marginLeft="30sp"
            android:text="@string/thoat"
            android:background="@drawable/custom_button3"/>
    </LinearLayout>
</LinearLayout>